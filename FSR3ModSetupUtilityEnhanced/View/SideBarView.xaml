<UserControl x:Class="FSR3ModSetupUtilityEnhanced.View.SideBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FSR3ModSetupUtilityEnhanced.View"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="200">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="18,14" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E42" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SidebarButton" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Width="24" Height="24" Margin="0,0,15,0" VerticalAlignment="Center"
                                Kind="{Binding Tag, RelativeSource={RelativeSource AncestorType=Button}}" />
                            <TextBlock VerticalAlignment="Center" FontSize="16"
                                Text="{Binding Content, RelativeSource={RelativeSource AncestorType=Button}}" />
                        </StackPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidebarSubButton" BasedOn="{StaticResource SidebarButton}" TargetType="Button">
            <Setter Property="Padding" Value="45,10" />
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Width="20" Height="20" Margin="0,0,10,0" VerticalAlignment="Center"
                                Kind="{Binding Tag, RelativeSource={RelativeSource AncestorType=Button}}" />
                            <TextBlock VerticalAlignment="Center" FontSize="14"
                                Text="{Binding Content, RelativeSource={RelativeSource AncestorType=Button}}" />
                        </StackPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="SidebarGrid" Width="60" HorizontalAlignment="Left" Background="#4C2D2D30">
        <Grid.Style>
            <Style TargetType="Grid">
                <Style.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Width" To="200" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Width" To="60" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>

        <StackPanel>
            <Button Style="{StaticResource SidebarButton}" Tag="Menu" Content="Menu" />
            <Button Style="{StaticResource SidebarButton}" Tag="Home" Content="Home" Click="HomeButton_Click"/>

            <StackPanel>
                <Button x:Name="SettingsButton" Style="{StaticResource SidebarButton}" Tag="Cog" Content="Settings" Click="SettingsButton_Click"/>
                <StackPanel x:Name="SettingsSubMenu" Visibility="Collapsed">
                    <Button Style="{StaticResource SidebarSubButton}" Tag="Wrench" Content="Mods Settings" Click="ModsSettingsButton_Click"/>
                    <Button Style="{StaticResource SidebarSubButton}" Tag="FolderMultipleImage" Content="Your Library" Click="LibraryButton_Click"/>
                </StackPanel>
            </StackPanel>

            <Button Style="{StaticResource SidebarButton}" Tag="HelpCircleOutline" Content="Guide" Click="GuideButton_Click"/>

            <StackPanel VerticalAlignment="Bottom" Margin="0,200,0,0">
                <Button Style="{StaticResource SidebarButton}" Tag="ExitToApp" Content="Exit" Click="ExitButton_Click"/>
                <TextBlock x:Name="VersionLabel" Margin="18,10,0,10" FontSize="12" Foreground="Gray" Text="v1.0.0" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>